
  <div class="row">
    <h3><%= @lead.company_name %></h3>
  </div>

  <div class="row well well-small">
  <div class="span5">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <td>
          Company Type:
        </td>
        <td>
          <%= @lead.company_type %>
        </td>
      </tr>
      <tr>
        <td>
          Contact:
        </td>
        <td>
          <%= @lead.contact %>
        </td>
      </tr>
      <tr>
        <td>
          Phone:
        </td>
        <td>
          <%= @lead.phone %>
        </td>
      </tr>
      <tr>
        <td>
          Email:
        </td>
        <td>
          <%= @lead.email %>
        </td>
      </tr>
        <tr>
        <td>
          Website:
        </td>
        <td>
          <%= @lead.website %>
        </td>
      </tr>
      <tr>
        <td>
          Notes:
        </td>
        <td>
          <%= @lead.notes %>
        </td>
      </tr>
      <tr>
        <td>
          Address:
        </td>
        <td>
          <%= @lead.address %>
        </td>
      </tr>
      <tr>
        <td>
          City:
        </td>
        <td>
          <%= @lead.city %>
        </td>
      </tr>
      <tr>
        <td>
          State:
        </td>
        <td>
          <%= @lead.state %>
        </td>
      </tr>
      <tr>
        <td>
          Zip:
        </td>
        <td>
          <%= @lead.zipcode %>
        </td>
      </tr>
      <tr>
        <td>
          Latitude:
        </td>
        <td>
          <%= @lead.latitude %>
        </td>
      </tr>      
      <tr>
        <td>
          Longitude:
        </td>
        <td>
          <%= @lead.longitude %>
        </td>
      </tr>
    </table>
<%= link_to "<i class=\"icon-arrow-left\"></i>".html_safe, leads_path, class: "btn btn-small" -%>
<%= link_to "<i class=\"icon-edit\"></i>".html_safe, edit_lead_path(@lead), class: "btn btn-small"  -%>
<%= link_to "<i class=\"icon-trash\"></i>".html_safe, @lead, method: :delete, data: { confirm: 'Are you sure you want to delete this lead?' }, class: "btn btn-small" -%>
<hr>
<p>
  <b>Created:</b>
  <%= @lead.created_at.strftime("%B %d, %Y") %>
</p>
<p>
  <b>Last Updated:</b>
  <%= @lead.updated_at.strftime("%B %d, %Y %I:%M%p") %>
</p>
<hr>
<h4>Other leads nearby:</h4>
<ul>
<% for lead in @lead.nearbys(20) %>
  <li><%= link_to lead.company_name, lead %> (<%= lead.distance.round(2) %> miles)</li>
<% end %>
</ul>


</div>
<div class="span6">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=460x100&sensor=false&zoom=12&markers=#{@lead.latitude}%2C#{@lead.longitude}" %>
    <hr>
<%= render "comments/form" %>
<%= render "comments/comments" %>
</div>
</div>
</div>