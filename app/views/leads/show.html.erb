<div class="row">
    <div class="span5">
    <h3><%= @lead.company_name %></h3>
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <td>
          Contact:
        </td>
        <td>
          <%= @lead.contact %>
        </td>
      </tr>
      <tr>
        <td>
          Phone:
        </td>
        <td>
          <%= @lead.phone %>
        </td>
      </tr>
      <tr>
        <td>
          Email:
        </td>
        <td>
          <%= @lead.email %>
        </td>
      </tr>
        <tr>
        <td>
          Website:
        </td>
        <td>
          <%= @lead.website %>
        </td>
      </tr>
      <tr>
        <td>
          Notes:
        </td>
        <td>
          <%= @lead.notes %>
        </td>
      </tr>
    </table>
<%= link_to "<i class=\"icon-arrow-left\"></i>".html_safe, leads_path, class: "btn btn-small" -%>
<%= link_to "<i class=\"icon-edit\"></i>".html_safe, edit_lead_path(@lead), class: "btn btn-small"  -%>
<%= link_to "<i class=\"icon-trash\"></i>".html_safe, @lead, method: :delete, data: { confirm: 'Are you sure you want to delete this lead?' }, class: "btn btn-small" -%>
<hr>
<p>
  <b>Created:</b>
  <%= @lead.created_at.strftime("%B %d, %Y") %>
</p>
<p>
  <b>Last Updated:</b>
  <%= @lead.updated_at.strftime("%B %d, %Y %I:%M%p") %>
</p>



</div>

<div class="span6 well">
  <h4> Comments: </h4>
<%= render "comments/form" %>
<%= render "comments/comments" %>
</div>
</div>